{% extends 'base.html.twig' %}

{% block title %}Édition de la chanson{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-blue-900 via-purple-900 to-black min-h-screen py-10">
        <div class="max-w-3xl mx-auto px-6 bg-gradient-to-br from-purple-700 via-pink-700 to-red-700 shadow-lg rounded-lg">
            <h1 class="text-3xl font-semibold text-center text-white mb-8">Édition de la chanson</h1>

            <div class="bg-gray-800 p-8 rounded-lg shadow-lg">
                {{ include('song/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>

            <div class="mt-8 flex justify-between items-center">
                <a href="{{ path('app_song_index') }}" class="text-blue-500 hover:text-blue-700 text-lg font-semibold">
                    Retour à la liste des chansons
                </a>

                <div>
                    {{ include('song/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
