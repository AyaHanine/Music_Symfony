<form method="post" action="{{ path('app_song_delete', {'id': song.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette chanson ?');" class="mt-6">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ song.id) }}">

    <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-lg text-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400">
        Supprimer
    </button>
</form>