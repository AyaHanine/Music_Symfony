{% extends 'base.html.twig' %}

{% block title %}New Playlist{% endblock %}

{% block body %}
   <div class="container mx-auto mt-12 px-4">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-extrabold text-gray-800 mb-2">Créer une Nouvelle Playlist</h1>
            <p class="text-lg text-gray-600">Ajoutez une playlist à votre bibliothèque musicale et personnalisez-la à votre goût.</p>
        </div>

        <div class="flex justify-center mb-6">
            <a href="{{ path('app_playlist_index') }}" class="bg-gray-500 text-white px-6 py-3 rounded-full hover:bg-gray-600 mr-6 text-lg">Retour à la liste</a>
        </div>

        <div class="bg-gradient-to-r from-blue-500 via-indigo-600 to-purple-600 shadow-xl rounded-lg p-8">
            <div class="flex justify-center items-center mb-8">
                <div class="w-32 h-32 bg-white rounded-full shadow-md overflow-hidden">
                    <img src="{{ asset('images/playlist-icon.png') }}" alt="Playlist Icon" class="w-full h-full object-cover">
                </div>
            </div>

            <h2 class="text-3xl font-semibold text-white mb-6 text-center">Formulaire de Création de Playlist</h2>

            <div class="space-y-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                    <div class="flex flex-col">
                        {{ form_label(form.name, 'Nom de la Playlist', {'attr': {'class': 'text-white text-lg font-semibold'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'px-4 py-3 mt-2 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-600'}}) }}
                    </div>

                     <div class="flex flex-col">
                        {{ form_label(form.songs, 'Ajouter des chansons', {'attr': {'class': 'text-white text-lg font-semibold'}}) }}
                        {{ form_widget(form.songs, {'attr': {'class': 'px-4 py-3 mt-2 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-600'}}) }}
                    </div>

                
                    <div class="text-center">
                        <button type="submit" class="bg-yellow-400 hover:bg-yellow-500 text-white py-3 px-6 rounded-full text-lg transition duration-300">Créer la Playlist</button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('app_playlist_index') }}" class="text-white text-lg hover:underline">Retour à la liste des playlists</a>
        </div>
    </div>

{% endblock %}
